{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "lib": [
      "esnext",
      "DOM"
    ],
    "strict": true,
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true
  },
  "exclude": ["node_modules", "**/*.test.ts", "vite.config.ts"]
}
