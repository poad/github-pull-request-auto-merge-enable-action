{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "lib": [
      "esnext",
      "DOM"
    ],
    "strict": true,
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "rootDir": "./src"
  },
  "exclude": ["node_modules", "**/*.test.ts", "*.config.ts", "dist" ]
}
