{
  "name": "github-pull-request-auto-merge-enable-action",
  "version": "1.0.1",
  "repository": "https://github.com/poad/github-pull-request-auto-merge-enable-action.git",
  "author": "Kenji Saito <ken-yo@mbr.nifty.com>",
  "license": "MIT",
  "main": "./dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "NODE_ENV=test jest --coverage --passWithNoTests --detectOpenHandles",
    "package": "ncc build --source-map --license licenses.txt -m -q",
    "clean": "rm -rf dist",
    "dev": "node --loader ts-node/esm src/main.ts",
    "all": "yarn build && yarn package && yarn format && yarn lint --fix && yarn test"
  },
  "devDependencies": {
    "@swc/cli": "*",
    "@swc/helpers": "*",
    "@swc/jest": "*",
    "@types/jest": "*",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "@vercel/ncc": "*",
    "eslint": "*",
    "eslint-config-airbnb-base": "*",
    "eslint-plugin-import": "*",
    "jest": "*",
    "jest-circus": "*",
    "prettier": "*",
    "ts-jest": "*",
    "ts-node": "*",
    "typescript": "*"
  },
  "dependencies": {
    "@actions/core": "*",
    "@octokit/core": "*",
    "@octokit/graphql": "*",
    "@octokit/plugin-request-log": "*",
    "regenerator-runtime": "*"
  },
  "peerDependencies": {
    "@actions/core": "*",
    "@octokit/core": "*",
    "@octokit/graphql": "*",
    "@octokit/plugin-request-log": "*"
  },
  "exports": {
    ".": {
      "node": "./dist/main.js",
      "require": "./dist/main.cjs",
      "default": "./dist/main.js"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    }
  }
}
