{
  "name": "github-pull-request-auto-merge-enable-action",
  "version": "1.0.5",
  "repository": "https://github.com/poad/github-pull-request-auto-merge-enable-action.git",
  "author": "Kenji Saito <ken-yo@mbr.nifty.com>",
  "license": "MIT",
  "main": "./dist/main.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "NODE_ENV=test jest --coverage --silent=false --passWithNoTests --detectOpenHandles",
    "pack": "ncc build -s --license licenses.txt -m -q",
    "clean": "rm -rf dist",
    "package": "ncc build -s --license licenses.txt -m -q",
    "dev": "node --loader ts-node/esm src/main.ts",
    "all": "pnpm build && pnpm package && pnpm format && pnpm lint --fix && pnpm test"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.4",
    "@swc/cli": "^0.1.62",
    "@swc/helpers": "^0.5.1",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.9",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "fetch-mock": "^9.11.0",
    "jest": "^29.6.4",
    "jest-circus": "^29.6.4",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@octokit/core": "^5.0.0",
    "@octokit/graphql": "^7.0.1",
    "@octokit/plugin-request-log": "^4.0.0",
    "regenerator-runtime": "^0.13.11",
    "source-map-support": "^0.5.21"
  },
  "exports": {
    ".": {
      "node": "./dist/main.js",
      "require": "./dist/main.cjs",
      "default": "./dist/main.js"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__tests__/*.test.ts",
      "**/__tests__/*.test.cts"
    ],
    "transform": {
      "^.+\\.m?(t|j)sx?$": [
        "ts-jest/legacy"
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/dist",
      "<rootDir>/node_modules"
    ],
    "globals": {
      "ts-jest": {
        "useESM": false,
        "tsconfig": "tsconfig-test.json"
      }
    },
    "verbose": true
  },
  "packageManager": "pnpm@8.7.1",
  "engines": {
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!",
    "pnpm": ">=8.7.1",
    "node": ">=20.0.0"
  }
}
