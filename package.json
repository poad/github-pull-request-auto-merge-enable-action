    "fetch-mock": "^12.5.5",
    "jiti": "^2.6.1",
    "pnpm": "^10.20.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
