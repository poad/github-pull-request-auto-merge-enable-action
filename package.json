{
  "name": "github-pull-request-auto-merge-enable-action",
  "version": "1.0.5",
  "repository": "https://github.com/poad/github-pull-request-auto-merge-enable-action.git",
  "author": "Kenji Saito <ken-yo@mbr.nifty.com>",
  "license": "MIT",
  "main": "./dist/main.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "format:check": "biome format src",
    "format:fix": "biome format --write src",
    "style:check": "biome check src",
    "style:fix": "biome check --apply-unsafe src",
    "lint": "pnpm run --parallel /.*:check$/",
    "lint-fix": "pnpm run /.*:fix$/",
    "test": "NODE_ENV=test jest --coverage --silent=false --passWithNoTests --detectOpenHandles",
    "pack": "ncc build -s --license licenses.txt -m -q",
    "clean": "rm -rf dist",
    "package": "ncc build -s --license licenses.txt -m -q",
    "all": "pnpm build && pnpm package && pnpm lint-fix && pnpm test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@vercel/ncc": "^0.36.1",
    "fetch-mock": "^9.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@octokit/core": "^5.0.2",
    "@octokit/graphql": "^7.0.2",
    "@octokit/plugin-request-log": "^4.0.0",
    "source-map-support": "^0.5.21"
  },
  "exports": {
    ".": {
      "node": "./dist/main.js",
      "require": "./dist/main.cjs",
      "default": "./dist/main.js"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__tests__/*.test.ts",
      "**/__tests__/*.test.cts"
    ],
    "transform": {
      "^.+\\.m?(t|j)sx?$": [
        "ts-jest/legacy"
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/dist",
      "<rootDir>/node_modules"
    ],
    "globals": {
      "ts-jest": {
        "useESM": false,
        "tsconfig": "tsconfig-test.json"
      }
    },
    "verbose": true
  },
  "packageManager": "pnpm@8.7.1",
  "engines": {
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!",
    "pnpm": ">=8.7.1",
    "node": ">=20.0.0"
  }
}
