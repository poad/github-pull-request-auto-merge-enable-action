{
  "name": "github-pull-request-auto-merge-enable-action",
  "version": "1.0.2",
  "repository": "https://github.com/poad/github-pull-request-auto-merge-enable-action.git",
  "author": "Kenji Saito <ken-yo@mbr.nifty.com>",
  "license": "MIT",
  "main": "./dist/main.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "NODE_ENV=test jest --coverage --silent=false --passWithNoTests --detectOpenHandles",
    "pack": "ncc build -s --license licenses.txt -m -q",
    "clean": "rm -rf dist",
    "package": "ncc build -s --license licenses.txt -m -q",
    "dev": "node --loader ts-node/esm src/main.ts",
    "all": "yarn build && yarn package && yarn format && yarn lint --fix && yarn test"
  },
  "devDependencies": {
    "@jest/globals": "*",
    "@swc/cli": "*",
    "@swc/helpers": "*",
    "@swc/jest": "*",
    "@types/jest": "*",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "@vercel/ncc": "*",
    "eslint": "*",
    "eslint-config-airbnb-base": "*",
    "eslint-plugin-import": "*",
    "fetch-mock": "*",
    "jest": "*",
    "jest-circus": "*",
    "prettier": "*",
    "ts-jest": "*",
    "ts-node": "*",
    "typescript": "*"
  },
  "dependencies": {
    "@actions/core": "*",
    "@octokit/core": "*",
    "@octokit/graphql": "*",
    "@octokit/plugin-request-log": "*",
    "regenerator-runtime": "*",
    "source-map-support": "*"
  },
  "peerDependencies": {
    "@actions/core": "*",
    "@octokit/core": "*",
    "@octokit/graphql": "*",
    "@octokit/plugin-request-log": "*",
    "source-map-support": "*"
  },
  "exports": {
    ".": {
      "node": "./dist/main.js",
      "require": "./dist/main.cjs",
      "default": "./dist/main.js"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__tests__/*.test.ts",
      "**/__tests__/*.test.cts"
    ],
    "transform": {
      "^.+\\.m?(t|j)sx?$": [
        "ts-jest/legacy"
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/dist",
      "<rootDir>/node_modules"
    ],
    "globals": {
      "ts-jest": {
        "useESM": false,
        "tsconfig": "tsconfig-test.json"
      }
    },
    "verbose": true
  }
}
