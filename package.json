  "author": "Kenji Saito <ken-yo@mbr.nifty.com>",
  "license": "MIT",
  "main": "./dist/entry-point.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig-build.json",
    "lint-fix": "eslint src/**/*.ts --fix",
    "lint": "eslint src/**/*.ts",
    "test": "vitest run --silent=true --coverage --max-workers=1",
    "package": "bunx @vercel/ncc build -o dist --source-map --license licenses.txt -q --target es2023",
    "clean": "rm -rf dist",
    "all": "bun run --run clean && bun run --run build && bun run --run package && pnpm --run lint-fix && bun run --vitest test"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@stylistic/eslint-plugin": "^5.8.0",
    "@types/node": "^25.2.2",
    "@vercel/ncc": "^0.38.4",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "eslint-plugin-github": "^6.0.0",
    "fetch-mock": "^12.6.0",
    "jiti": "^2.6.1",
    "pnpm": "^10.29.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.1.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@octokit/core": "^7.0.6",
    "@octokit/graphql": "^9.0.3",
    "@octokit/plugin-request-log": "^6.0.0",
    "source-map-support": "^0.5.21"
  },
  "exports": {
    ".": {
      "node": "./dist/main.js",
      "require": "./dist/main.cjs",
      "default": "./dist/main.js"
    }
  },
  "engines": {
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!",
    "pnpm": ">=10.17.0",
    "node": ">=24"
  },
  "packageManager": "pnpm@10.29.2"
}
