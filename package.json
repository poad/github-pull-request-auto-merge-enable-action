{
  "name": "github-pull-request-auto-merge-enable-action",
  "version": "1.0.5",
  "repository": "https://github.com/poad/github-pull-request-auto-merge-enable-action.git",
  "author": "Kenji Saito <ken-yo@mbr.nifty.com>",
  "license": "MIT",
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsc",
    "format:check": "biome format ./{src,__tests__}",
    "format:fix": "biome format --write ./{src,__tests__}",
    "style:check": "biome check ./{src,__tests__}",
    "style:fix": "biome check --apply-unsafe ./{src,__tests__}",
    "lint": "pnpm run --parallel /.*:check$/",
    "lint-fix": "pnpm run /.*:fix$/",
    "test": "vitest run --silent=false --coverage",
    "pack": "ncc build --license licenses.txt -m -q",
    "clean": "rm -rf dist",
    "package": "ncc build --license licenses.txt -m -q",
    "all": "pnpm build && pnpm package && pnpm lint-fix && pnpm test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.1",
    "@types/node": "^20.12.7",
    "@vercel/ncc": "^0.36.1",
    "@vitest/coverage-v8": "^1.5.2",
    "fetch-mock": "^9.11.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.5.2"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@octokit/core": "^5.2.0",
    "@octokit/graphql": "^7.1.0",
    "@octokit/plugin-request-log": "^4.0.1",
    "source-map-support": "^0.5.21"
  },
  "exports": {
    ".": {
      "node": "./dist/main.js",
      "require": "./dist/main.cjs",
      "default": "./dist/main.js"
    }
  },
  "engines": {
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!",
    "pnpm": ">=8.7.1",
    "node": ">=20.0.0"
  }
}
